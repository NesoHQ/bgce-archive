Table categories {
  id           integer   [pk, not null, note: "Primary key, generated by DB"]
  uuid         uuid      [not null, unique, default: `gen_random_uuid()`, note: "Unique identifier for public use, generated by DB"]
  parent_id    integer   [ref: > categories.id, note: "If NULL, it's a top-level category; otherwise a subcategory of parent_id"]
  slug         varchar   [unique, not null, note: "Slug-like identifier, e.g., 'interview-qna' or 'basic-interview-qna'"]
  type         varchar   [not null, default: `'category'`, note: "Type of the entry, e.g., 'category', 'subcategory', 'xxx'"]
  label        varchar   [not null, note: "Human-readable title"]
  description  text      [note: "Detailed description or summary"]
  maintainer   varchar   [note: "GitHub handle of maintainer (optional)"]
  created_by   integer   [not null, note: "User who created this entry"]
  approved_by  integer   [note: "Admin who approved it"]
  updated_by   integer   [note: "Admin who updated it"]
  deleted_by   integer   [note: "Admin who deleted it"]
  created_at   timestamp [default: `now()`, not null]
  updated_at   timestamp [default: `now()`, not null]
  approved_at  timestamp
  deleted_at   timestamp
  status       varchar   [default: `'pending'`, note: "pending, approved, rejected, deleted"]
  meta         jsonb     [note: "Flexible metadata for storing future dynamic values"]

  Note: "Hierarchical category/subcategory table"
}
